<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Meet" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--        设置全局顶部状态栏的颜色-->
        <item name="android:statusBarColor">@color/status_orange</item>
        <!--        应用窗口页面背景的颜色-->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!--    闪屏页背景-->
    <style name="Theme.Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/flash</item>
        <!--        顶部状态栏颜色-->
        <item name="android:statusBarColor">@color/status_orange</item>
    </style>
</resources>